#!/bin/bash

SHORTCUTS_FILE="$HOME/.config/bash/.bash_shortcuts"
S_DIRECTORY_LIST=""
PWD="T"
VERBOSE="T"

if [ "T" = "$PWD" ]; then
    PWD=" && pwd"
else
    PWD=""
fi

function g_alias() {
    if [ "$VERBOSE" = "T" ]; then
        echo "alias g_$1='cd $2$PWD'" | tee -a "$SHORTCUTS_FILE"
    else
        echo "alias g_$1='cd $2$PWD'" >> "$SHORTCUTS_FILE"
    fi
}
function n_alias() {
    if [ "$VERBOSE" = "T" ]; then
        echo "alias n_$1='cd $2$PWD && nvim'" | tee -a "$SHORTCUTS_FILE"
    else
        echo "alias n_$1='cd $2$PWD && nvim'" >> "$SHORTCUTS_FILE"
    fi
}
function l_alias() {
    if [ "$VERBOSE" = "T" ]; then
        echo "alias l_$1='$2 $3 &> /dev/null & true'" | tee -a "$SHORTCUTS_FILE"
    else
        echo "alias l_$1='$2 $3 &> /dev/null & true'" >> "$SHORTCUTS_FILE"
    fi
}

echo "# go + nvim -------------------------------------------------------------"
S_DIRECTORY_LIST="$(find "$HOME/stuff/code" -maxdepth 1)$S_DIRECTORY_LIST" #code_file
S_DIRECTORY_LIST="$HOME/stuff/cheat $S_DIRECTORY_LIST"
S_DIRECTORY_LIST="$HOME/.config/bash $S_DIRECTORY_LIST"
S_DIRECTORY_LIST="$HOME/.config/nvim $S_DIRECTORY_LIST"
S_DIRECTORY_LIST="$HOME/.local/bin $S_DIRECTORY_LIST"

echo -e "# file generated by '$(basename "$0")' - $(date +"%F %T")\n" > "$SHORTCUTS_FILE"

for S_DIRECTORY in $S_DIRECTORY_LIST
do
    ALIAS_NAME="$(echo "$S_DIRECTORY" | sed "s|\/.*\/||")"

    [ "$VERBOSE" = "T" ] && echo "> $S_DIRECTORY"
    g_alias "$ALIAS_NAME" "$S_DIRECTORY"
    n_alias "$ALIAS_NAME" "$S_DIRECTORY"
done

echo "# go --------------------------------------------------------------------"
S_DIRECTORY_LIST=""
S_DIRECTORY_LIST="/var/backups/bacup $S_DIRECTORY_LIST" #code_file
S_DIRECTORY_LIST="$HOME/stuff $S_DIRECTORY_LIST"
S_DIRECTORY_LIST="$HOME/stuff/shit $S_DIRECTORY_LIST"

for S_DIRECTORY in $S_DIRECTORY_LIST
do
    ALIAS_NAME="$(echo "$S_DIRECTORY" | sed "s|\/.*\/||")"

    [ "$VERBOSE" = "T" ] && echo "> $S_DIRECTORY"
    g_alias "$ALIAS_NAME" "$S_DIRECTORY"
done

echo "# custom ----------------------------------------------------------------"
[ "$VERBOSE" = "T" ] && echo "> /usr/local/bin"
g_alias "lbin" "/usr/local/bin"
[ "$VERBOSE" = "T" ] && echo "> $HOME/stuff/Downloads"
g_alias "downloads" "$HOME/stuff/Downloads"
echo "# launch ----------------------------------------------------------------"
[ "$VERBOSE" = "T" ] && echo "> nautilus $HOME/stuff/Downloads"
l_alias "downloads" "nautilus" "$HOME/stuff/Downloads"
[ "$VERBOSE" = "T" ] && echo "> firefox"
l_alias "fire" "firefox" ""
